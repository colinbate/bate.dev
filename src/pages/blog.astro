---
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
import BaseLayout from "../layouts/BaseLayout.astro";
import EntriesOne from "../components/entries/EntriesOne.astro";
import Seo from "$comp/Seo.astro";
---

<Seo title="Posts"/>
<BaseLayout>
  <h2 class="sr-only" id="header">Colin Bate's Posts</h2><div
  class="max-w-6xl px-8 mx-auto py-12 lg:pt-28">
  <div>
    <h1
      class="text-white mt-4 font-semibold text-5xl lg:text-8xl tracking-tighter">
      Posts
    </h1>
    <div class="lg:mt-8 max-w-2xl">
      <p class="text-lg lg:text-2xl text-white">
        Read the things I am writing about. Bask in the geekiness. Also, fair warning, some of the images on the posts were generated by AI.
      </p>
    </div>
  </div>
</div>
  <section class="h-feed">
    <div class="px-8 md:px-12 mx-auto max-w-7xl py-12 lg:py-32">
      <ul class="grid grid-cols-1 lg:grid-cols-4 sm:grid-cols-2 gap-3 sm:gap-6">
        {
          allPosts
            .slice()
            .reverse()
            .map((post) => (
              <EntriesOne
                url={"/posts/" + post.slug}
                title={post.data.title}
                description={post.data.description}
                pubDate={post.data.pubDate}
                author={post.data.author}
                image={post.data.image}
              />
            ))
        }
      </ul>
    </div>
  </section>
</BaseLayout>
