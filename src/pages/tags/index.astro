---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Seo from "$comp/Seo.astro";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
const pageTitle = "Tag Index";
---
<Seo title="Tags"/>
<BaseLayout pageTitle={pageTitle}>
  <section aria-labelledby="header" class="relative overflow-hidden">
    <div
      class="overflow-hidden relative">
      <div class="px-8 mx-auto max-w-7xl lg:px-24 py-24">
        <h1
          class="text-white mt-4 font-semibold text-5xl lg:text-8xl tracking-tighter">
          All tags
        </h1>
      </div>
    </div>
  </section>
  <section>
    <div class="px-8 mx-auto max-w-7xl lg:px-24 py-24">
      <div class="space-y-3">
        {
          tags.map((tag) => (
            <div>
              <p>
                <a
                  class="text-white inline-flex items-center w-full mt-4 font-semibold text-5xl lg:text-6xl tracking-tighter hover:text-accent-300 underline"
                  href={`/tags/${tag}`}>
                  {tag}
                </a>
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>
