---
import Icon from './icon.svelte';
type Props = {
  author: string;
  genre: string;
  icon: string;
  series?: boolean;
}
const { author, genre, icon, series } = Astro.props;
---
<div class="flex flex-row gap-4 justify-between items-center">
  <div class="inline-flex items-center gap-2"><Icon icon={series ? 'series' : 'book'}/> by {author}</div>
  <div class="inline-flex items-center gap-2"><Icon icon={icon} /> {genre}</div>
</div>