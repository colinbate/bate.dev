---
import type { CollectionEntry } from 'astro:content';
export type Props = {
  proj: CollectionEntry<'projects'>;
}

const { proj } = Astro.props;
---
<article class="grid items-center grid-cols-1 lg:grid-cols-4 p-4 lg:p-10 bg-zinc-900 text-white">
  <div class="lg:col-span-3">
    <div class="lg:max-w-2xl space-y-6">
      <div class="flex items-center gap-8 justify-between lg:justify-start bg-accent-400/30 -m-4 p-4 lg:bg-transparent lg:m-0 lg:p-0">
        <h4 class="text-2xl lg:text-5xl">{proj.data.title}</h4>
        {proj.data.code && 
        <a class="hover:text-accent-300" target="_blank" href={proj.data.code}><svg xmlns="http://www.w3.org/2000/svg" class="h-6 lg:h-8 w-6 lg:w-8" fill="currentColor" viewBox="0 0 496 512"><path d="M165.9 397.4c0 2-2.3 3.6-5.2 3.6-3.3.3-5.6-1.3-5.6-3.6 0-2 2.3-3.6 5.2-3.6 3-.3 5.6 1.3 5.6 3.6zm-31.1-4.5c-.7 2 1.3 4.3 4.3 4.9 2.6 1 5.6 0 6.2-2s-1.3-4.3-4.3-5.2c-2.6-.7-5.5.3-6.2 2.3zm44.2-1.7c-2.9.7-4.9 2.6-4.6 4.9.3 2 2.9 3.3 5.9 2.6 2.9-.7 4.9-2.6 4.6-4.6-.3-1.9-3-3.2-5.9-2.9zM244.8 8C106.1 8 0 113.3 0 252c0 110.9 69.8 205.8 169.5 239.2 12.8 2.3 17.3-5.6 17.3-12.1 0-6.2-.3-40.4-.3-61.4 0 0-70 15-84.7-29.8 0 0-11.4-29.1-27.8-36.6 0 0-22.9-15.7 1.6-15.4 0 0 24.9 2 38.6 25.8 21.9 38.6 58.6 27.5 72.9 20.9 2.3-16 8.8-27.1 16-33.7-55.9-6.2-112.3-14.3-112.3-110.5 0-27.5 7.6-41.3 23.6-58.9-2.6-6.5-11.1-33.3 2.6-67.9 20.9-6.5 69 27 69 27 20-5.6 41.5-8.5 62.8-8.5s42.8 2.9 62.8 8.5c0 0 48.1-33.6 69-27 13.7 34.7 5.2 61.4 2.6 67.9 16 17.7 25.8 31.5 25.8 58.9 0 96.5-58.9 104.2-114.8 110.5 9.2 7.9 17 22.9 17 46.4 0 33.7-.3 75.4-.3 83.6 0 6.5 4.6 14.4 17.3 12.1C428.2 457.8 496 362.9 496 252 496 113.3 383.5 8 244.8 8zM97.2 352.9c-1.3 1-1 3.3.7 5.2 1.6 1.6 3.9 2.3 5.2 1 1.3-1 1-3.3-.7-5.2-1.6-1.6-3.9-2.3-5.2-1zm-10.8-8.1c-.7 1.3.3 2.9 2.3 3.9 1.6 1 3.6.7 4.3-.7.7-1.3-.3-2.9-2.3-3.9-2-.6-3.6-.3-4.3.7zm32.4 35.6c-1.6 1.3-1 4.3 1.3 6.2 2.3 2.3 5.2 2.6 6.5 1 1.3-1.3.7-4.3-1.3-6.2-2.2-2.3-5.2-2.6-6.5-1zm-11.4-14.7c-1.6 1-1.6 3.6 0 5.9 1.6 2.3 4.3 3.3 5.6 2.3 1.6-1.3 1.6-3.9 0-6.2-1.4-2.3-4-3.3-5.6-2z"/></svg></a>}
      </div>
      <p class="text-xl lg:text-2xl">{proj.data.description}</p>
      <div class="flex flex-wrap gap-3">
        {
          proj.data.tags.map((tag) => (
            <a href={`/tags/${tag}`} class="p-category inline-flex items-center rounded-md font-mono bg-accent-400/10 px-2 py-1 text-xs font-medium text-accent-500 ring-1 ring-inset ring-accent-400/20 hover:text-accent-300 hover:ring-accent-400/60">
              {tag}
            </a>
          ))
        }
      </div>
      
      <div class="mt-6 flex items-center gap-6">
        { proj.data.wip && <span class="inline-flex items-center gap-x-1.5 rounded-md px-2 py-1 text-sm font-medium text-white ring-1 ring-inset ring-red-800">
          <svg class="h-1.5 w-1.5 fill-red-400" viewBox="0 0 6 6" aria-hidden="true">
            <circle cx="3" cy="3" r="3" />
          </svg>
          Work In Progress
        </span>}
        { proj.data.url !== '#' &&
        <a
          class="duration-200 group inline-flex items-center hover:text-accent-400 lg:text-2xl text-white"
          href={proj.data.url}
          target="_blank"
          aria-label="visit project">
          Check it out!{" "}
          <span class="ml-0" aria-hidden="true">
            <svg
              class="w-12 h-5 duration-200 -ml-3 group-hover:ml-6 transform"
              viewBox="0 0 30 13"
              fill="none"
              xmlns="http://www.w3.org/2000/svg">
              <line
                class="duration-200 group-hover:text-accent-400 text-transparent"
                x1="0.315787"
                y1="6.3409"
                x2="29.6842"
                y2="6.3409"
                stroke="currentColor"
                stroke-width="1"
              />
              <path
                class="duration-200 group-hover:text-accent-400"
                d="M29.6842 6.00718C28.8953 6.00718 28.1142 5.8518 27.3854 5.54991C26.6565 5.24802 25.9943 4.80553 25.4365 4.24772C24.8787 3.6899 24.4362 3.02767 24.1343 2.29885C23.8324 1.57002 23.677 0.788874 23.677 0"
                stroke="currentColor"
                stroke-width="1"
              />
              <path
                class="duration-200 group-hover:text-accent-400"
                d="M29.6842 6.67464C28.8953 6.67464 28.1142 6.83002 27.3854 7.13191C26.6565 7.4338 25.9943 7.87628 25.4365 8.4341C24.8787 8.99192 24.4362 9.65414 24.1343 10.383C23.8324 11.1118 23.677 11.8929 23.677 12.6818"
                stroke="currentColor"
                stroke-width="1"
              />
            </svg>
          </span>
        </a>}
      </div>
    </div>
  </div>
  <div class="lg:ml-auto">
    <div class="flex items-center mt-6 lg:w-32 lg:h-32 justify-center">
      <article class="">
        <img
          class="w-full max-w-[128px] aspect-square object-cover"
          src={proj.data.image.url}
          alt={proj.data.image.alt}
          width="128"
          height="128"
        />
        <figcaption class="sr-only">{proj.data.title}</figcaption>
      </article>
    </div>
  </div>
</article>