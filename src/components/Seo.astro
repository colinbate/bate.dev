---
import { AstroSeo } from "@astrolib/seo";
import { SITE_URL, SITE_TITLE } from '$data/constants';
import type { ImageMetadata } from "astro";
import defaultImage from '$asset/bate-dev-social.jpg';
interface Props {
  title: string;
  description?: string;
  img?: ImageMetadata;
}
const { title, description, img } = Astro.props;


const image = img ?? defaultImage;

---
<AstroSeo
  title={`${SITE_TITLE} | ${title}`}
  description={ description || `The portfolio and developer blog of Colin Bate.`}
  canonical={SITE_URL}
  openGraph={{
    url: SITE_URL,
    title: SITE_TITLE,
    description: description || `The portfolio and developer blog of Colin Bate.`,
    images: [
      {
        url: image.src,
        width: image.width,
        height: image.height,
        alt: "Colin Bate dev social open graph",
        type: `image/${image.format}`,
      },
      // {
      //   url: "",
      //   width: 4096,
      //   height: 4096,
      //   alt: "Twitter open graph",
      //   type: "image/jpeg",
      // },
      // { url: `${SITE_URL}${img || `/og/bate-dev-social.jpg`}` },
    ],
    site_name: SITE_TITLE,
  }}
  twitter={{
    handle: "@rhuvok",
    cardType: "summary_large_image",
  }}
/>