---
import BlogImage from '$comp/BlogImage.astro';
import type { CollectionEntry } from 'astro:content';
type ImageType = CollectionEntry<'posts'>['data']['image']
export type Props = {
  title: string;
  url: string;
  description: string;
  pubDate: string;
  author: string;
  image: ImageType;
};
const { title, url, description, pubDate, author, image } = Astro.props;

---

<div class="w-full mx-auto h-full items-center">
  <a class="group" href={url} title={title}
    ><BlogImage image={image} />
    <p class="mt-6 text-zinc-400 font-light text-xs">
      <time datetime={pubDate}>{pubDate}</time> by {author}
    </p>
    <p
      class="text-white font-medium mt-3 group-hover:text-accent-400 text-xl lg:text-xl">
      {title}
    </p>
    <p
      class="mt-6 text-zinc-400 font-normal line-clamp-2 text-base leading-snug">
      {description}
    </p>
  </a>
</div>
